<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/white_green"
                android:padding="5dp">

    <com.victor.friendchat.widget.CircleImageView
        android:id="@+id/civ_item_avatar"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_gravity="start"
        android:src="@mipmap/image_null_default"
        app:border_color="#ffffff"
        app:border_width="2dp" />

    <TextView
        android:id="@+id/tv_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignTop="@id/civ_item_avatar"
        android:layout_toEndOf="@id/civ_item_avatar"
        android:layout_toRightOf="@id/civ_item_avatar"
        android:text=""
        android:textColor="#000000" />


    <TextView
        android:id="@+id/tv_item_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/civ_item_avatar"
        android:layout_toEndOf="@id/civ_item_avatar"
        android:layout_toRightOf="@id/civ_item_avatar"
        android:text=""/>


</RelativeLayout>
